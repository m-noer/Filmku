<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/image_bg_detail"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:alpha="0.4"
        />

    <ImageView
        android:id="@+id/image_view_detail"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toRightOf="@+id/image_view_detail"
        android:textSize="28sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/image_view_detail"
        android:layout_below="@id/tv_title_detail"
        android:layout_marginLeft="12dp">
        <ImageView
            android:id="@+id/rate"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:src="@drawable/ic_star"
            />
        <TextView
            android:id="@+id/tv_rate_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/overview"/>
    </LinearLayout>



    <TextView
        android:id="@+id/txtRelease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_detail"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:text="@string/release"
        android:textSize="24sp"
        android:textColor="@android:color/holo_orange_dark"/>
    <TextView
        android:id="@+id/tv_release_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRelease"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:textColor="@color/overview"/>

    <TextView
        android:id="@+id/txtOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_release_detail"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/overview"
        android:textSize="24sp"
        android:textColor="@android:color/holo_orange_dark"/>
    <TextView
        android:id="@+id/tv_overview_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtOverview"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:textColor="@color/overview"/>



</RelativeLayout>